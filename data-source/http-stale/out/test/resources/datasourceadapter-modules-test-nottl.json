{
  "modules": [
    "httpAdapter=java:io.knotx.databridge.http.stale.StaleHttpDataSourceAdapter"
  ],
  "config": {
    "httpAdapter": {
      "options": {
        "config": {
          "address": "knotx.databridge.http.stale",
          "clientOptions": {
            "maxPoolSize": 1000,
            "keepAlive": false
          },
          "cacheTtl": 0,
          "cacheSize": 1000,
          "services": [
            {
              "path": "/content/.*",
              "domain": "localhost",
              "port": 4000,
              "allowedRequestHeaders": [
                "Content-Type",
                "X-Server-Response-Control"
              ]
            }
          ]
        }
      }
    }
  }
}

