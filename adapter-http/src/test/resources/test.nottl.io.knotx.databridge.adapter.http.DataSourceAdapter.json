{
  "main": "io.knotx.databridge.adapter.http.DataSourceAdapter",
  "options": {
    "config": {
      "address": "datasource.adapter.http",
      "clientOptions": {
        "maxPoolSize": 1000,
        "keepAlive": false
      },
      "cacheTtl": 0,
      "services": [
        {
          "path": "/content/.*",
          "domain": "localhost",
          "port": 4000,
          "allowedRequestHeaders": [
            "Content-Type",
            "X-Server-Response-Control"
          ]
        }
      ]
    }
  }
}
